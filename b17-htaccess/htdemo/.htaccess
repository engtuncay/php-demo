RewriteEngine On

# Debug için ortam değişkenleri
RewriteRule .* - [E=REQFILE:%{REQUEST_FILENAME}]
RewriteRule .* - [E=REQURI:%{REQUEST_URI}]
RewriteRule .* - [E=VAR1:%{THE_REQUEST}]

# RewriteCond %{HTTP:Authorization} .
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

# Eğer istenen dosya ve dizin mevcut değilse index.php'ye yönlendir
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteCond %{REQUEST_URI} (.+)$
#RewriteRule ^(.*)$ index.php?%1 [L,R=301]
# RewriteRule ^(.*)$ index.php [L]

# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteCond %{REQUEST_URI} (.+)/$
# RewriteRule ^ %1 [L,R=301]
# RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
# RewriteRule ^ http://%1%{REQUEST_URI} [R=301,L]

# Ana Denetleyiciyi (Front Controller) Kullanma
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# ([\s\S]*) relative bulunduğu pathden sonraki yer
RewriteRule ^([\s\S]*)$ index.php/$1 [L,NC,QSA]


